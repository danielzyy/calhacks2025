{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "HCP SDK Input Schema",
  "type": "object",
  "required": ["metadata", "available_commands"],
  "properties": {
    "metadata": {
      "type": "object",
      "required": ["device_id", "freetext_desc"],
      "properties": {
        "device_id": { "type": "string" },
        "freetext_desc": { "type": "string" }
      },
      "additionalProperties": false
    },
    "available_commands": {
      "type": "object",
      "patternProperties": {
        "^[a-zA-Z_][a-zA-Z0-9_]*$": {
          "type": "object",
          "required": ["freetext_desc", "params"],
          "properties": {
            "freetext_desc": { "type": "string" },
            "params": {
              "type": "array",
              "items": {
                "type": "object",
                "minProperties": 1,
                "maxProperties": 1,
                "additionalProperties": false,
                "patternProperties": {
                  "^[a-zA-Z_][a-zA-Z0-9_]*$": {
                    "type": "string",
                    "enum": ["int", "float", "string", "bool"]
                  }
                }
              }
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
